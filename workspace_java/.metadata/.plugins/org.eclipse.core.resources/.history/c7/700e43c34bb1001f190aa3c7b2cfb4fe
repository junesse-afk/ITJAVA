package test;

public class Board {
//	Board 클래스 정의
//	static 멤버변수 int num
//	멤버변수 private name, subject, content
//	기본 생성자 num 1씩 증가 
//	메서드 setter getter
	private static int num;
	private String name;
	private String subject;
	private String content;
	
	public Board() {
		num++;
	}
	
//	Board 모든 값을 받는 생성자 추가
	public Board(int num, String name, String subject, String content) {
		this.num = num;
		this.name = name;
		this.subject = subject;
		this.content = content;
	}

	public static int getNum() {
		return num;
	}

	public String getName() {
		return name;
	}

	public String getSubject() {
		return subject;
	}

	public String getContent() {
		return content;
	}

	public static void setNum(int num) {
		Board.num = num;
	}

	public void setName(String name) {
		this.name = name;
	}

	public void setSubject(String subject) {
		this.subject = subject;
	}

	public void setContent(String content) {
		this.content = content;
	}
	
	public void prn() {
		System.out.println("번호 : " + num);
		System.out.println("작성자 : " + name);
		System.out.println("제목 : " + subject);
		System.out.println("내용 : " + content);
	}

//	모든클래스 부모가 Object 클래스 => 메서드 toString()
//	=> Object클래스 안에 있는 toString()메서드 수정 
	@Override
	public String toString() {
		return "Board [name=" + name + ", subject=" + subject + ", content=" + content + "]";
	}
	
	
	
}
